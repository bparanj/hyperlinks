<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="refresh" content="25" >
	
    <title>Link Search</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/1.0.2/list.min.js" integrity="sha512-MT5YyrGWqMGkIbwkVUZEWGrRDjlNx8loukEdFyzLo4s8INKVxnDQy2eFcpmnWGrFwJ+X8mRTQOJpWCayXz7+Og==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    
  </head>
  <body onLoad="document.search.focus()";>

    <h1 class='text-center'>Hyperlinks</h1>

    <div class='container'>
      <div id="hyperlinks">
      <!-- class="search" automagically makes an input a search field. -->
		  <div class='mb-3'>
		  	<input name='search' class="search form-control" placeholder="Search" autofocus onkeydown="onkeypressed(event, this);" />
		  </div>

      <!-- Child elements of container with class="list" becomes list items -->
		<div class='list d-grid gap-3'>
	      <!-- The innerHTML of children with class="title" becomes this items "title" value -->
		  <% @bookmarks.each do |mark| %>
	   		<div class="card" style="width: 18rem;">
	   		  <div class="card-header title">
	   		    <%= mark.title %>
	   		  </div>
	   		  <div class="card-body">
	   		    <p class="card-text content"> <%= mark.content %> </p>
	   			<a href="<%= mark.link %>" class="card-link" target="_blank"><%= mark.link %></a>
	   		  </div>
	   		</div>
		  <% end %>
  	    </div>
      </div>    
    </div>

<script>
    var options = {
      valueNames: [ 'title', 'content' ]
    };

    var userList = new List('hyperlinks', options);
</script>

<script>
	function onkeypressed(evt, input) {
	    if (evt.keyCode == 27) {
	        input.value = '';
	    }
	}
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>
